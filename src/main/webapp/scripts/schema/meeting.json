{
	"id": "meeting",
    "type": "object",
    "properties": {
    	"id": {
            "type": "number",
            "minimum": 1
        },
		"name": {
			"type": "string"
		},
        "project": {
            "type": "object",
            "properties": {
            	"id" : {
		            "type": "number",
		            "minimum": 1
	            },
            	"name" : {
	            	"type": "string"
	            },
            	"liveDate" : {
	            	"type": "string",
		            "format" : "date-time"
	            }
	        },
	        "required": ["id", "name"]
        },
        "date": {
            "type": "string",
            "format" : "date-time"
        },
		"statusCode": {
           	"enum": [ "NEW", "IN_PROGRESS", "READY", "CLOSED" ]
		},
        "owner": {
            "type": "object",
            "properties": {
            	"id":  {
            		"type": "string"
            	},
            	"name": {
            		"type": "string"
            	}
            },
            "required": ["id"]
        },
        "buyer": {
            "type": "string"
        },
        "assistantBuyer": {
            "type": "string"
        },
        "counts": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                "^(.)+$": {
                   	"type": "number",
                   	"minimum": 0
                 }
            }
        },
        "required": ["id", "name", "project", "date", "statusCode", "owner", "buyer"]
    }
}
